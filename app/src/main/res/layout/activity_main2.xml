<?xml version="1.0" encoding="utf-8"?>
<!--<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#F6C77C"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="30"
        android:gravity="center"
        android:text="экран участника"
        android:textSize="28sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/tex6tView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="выберите организатора:"
        android:textSize="20sp"
        android:ems="30"
        android:textStyle="bold"
        android:gravity="center"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="16dp" />
    <Spinner
        android:id="@+id/organizerSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:text="Отметьте свое присутствие:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:background="@drawable/roundstyle"
        android:padding="10dp"
        android:id="@+id/butten_teacher7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="Сегодня"></Button>
    <ToggleButton
        android:background="@drawable/roundstyle"
        android:padding="10dp"
        android:id="@+id/todayToggleButton"
        android:backgroundTint="#EDE068"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textOn="Приду"
        android:textOff="Не приду" />
    <Button
        android:background="@drawable/roundstyle"
        android:padding="10dp"
        android:id="@+id/butten_teacher8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="36dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="Завтра"></Button>
    <ToggleButton
        android:background="@drawable/roundstyle"
        android:padding="10dp"
        android:id="@+id/tomorrowToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#EDE068"
        android:textOn="Приду"
        android:textOff="Не приду" />
    <Button
        android:background="@drawable/roundstyle"
        android:padding="10dp"
        android:id="@+id/butten_teacher9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="Послезавтра"></Button>
    <ToggleButton
        android:background="@drawable/roundstyle"
        android:padding="10dp"
        android:id="@+id/afterTomorrowToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#F4E66B"
        android:textOn="Приду"
        android:textOff="Не приду" />
    <TextView
        android:id="@+id/attendanceStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingTop="16dp"
        android:text="Статус: " />

</LinearLayout>
<!--</androidx.constraintlayout.widget.ConstraintLayout>-->